%p
  SORT BY:
  - WorkoutExercise::EXERCISE_TYPE.each do |exercise_type|
    = link_to exercise_type.upcase, "#"
    |

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Exercise
      %th Sets
      %th Notes

  %tbody
    - @workout.all_exercises.each do |exercise|
      = f.fields_for :workout_exercises, @workout.new_workout_exercise do |e|
        %tr#workout_exercises_fields
          = e.hidden_field :exercise_id, value: exercise.id
          %td#workout_exercise_name= exercise.titleize_name
          %td#workout_exercises_sets= e.input :sets, collection: 1..10
          %td#workout_exercise_notes= e.input :notes, input_html: { rows: 4 }