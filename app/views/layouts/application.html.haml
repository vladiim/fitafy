!!! 5

%head= render 'layouts/head'

%body#main.container

  %nav= render 'layouts/navigation'

  %section#main_content
    = render 'layouts/flashes'

    %header
      %h1= section_title unless params[:action] == 'home'
    = yield

  - if can? :manage, Workout
    .modal.hide.fade.in#new_workout_modal
      .modal-header
        %a.close{ "data-dismiss" => "modal" } x
        %h3 Create New Workout
      .modal-body
      = simple_form_for new_workout do |f|
        = f.input :name
        = f.submit "CREATE WORKOUT", class: "btn btn-primary"

/     %a.close{ "data-dismiss" => "modal" } x

= debug(params) if Rails.env.development?