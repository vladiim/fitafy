.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %ul.nav

        %li#logo= link_to logo, root_path, id: "fitafy_logo"

        - if can? :manage, Workout
          %li.dropdown
            = link_to "WORKOUTS", "#", class: "dropdown-toggle", "data-toggle" => "dropdown"
            %ul.dropdown-menu
              %li= link_to "ALL WORKOUTS", workouts_path
              %li= link_to "NEW WORKOUT", "#new_workout_modal", "data-toggle" => "modal"
        - else
          %li= link_to "WORKOUTS", workouts_path

        - if can? :manage, Exercise
          %li.dropdown
            = link_to "EXERCISES", "#", class: "dropdown-toggle", "data-toggle" => "dropdown"
            %ul.dropdown-menu
              %li= link_to "EXERCISES", exercises_path
              %li= link_to "NEW EXERCISE", new_exercise_path

        %li.ajax_nav_spinner

      %div.right-nav

        %ul.nav

          - if current_user
            %li.btn-group
              %a.btn.btn-inverse{"href" => "#"}
                = image_tag(current_user.avatar_url(:thumbnail))
                = current_user.username.upcase
              %a#user_drop_down.btn.btn-inverse.dropdown-toggle{"data-toggle"=>"dropdown", "href"=>"#"}
                %span.caret
              %ul.dropdown-menu
                %li= link_to "PROFILE", user_path(current_user)
                %li= link_to "EDIT PROFILE", edit_user_path(current_user)
                %li= link_to "LOGOUT", logout_path

          - else
            %li= link_to "LOGIN", login_path
            %li= link_to "SIGN UP", sign_up_path