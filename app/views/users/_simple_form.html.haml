= simple_form_for @user, validate: true, html: { class: 'fita_form' } do |f|
  = f.error_notification
  = f.input :username
  = f.input :email
  = f.input :password
  = f.input :password_confirmation

  - unless current_user
    = f.input :terms_of_service, label: "I agree with #{link_to 'the fitafy Terms of Service', '#terms_of_service_modal', 'data-toggle' => 'modal'}", as: :radio_buttons

  = f.submit cta, class: "btn btn-primary"

= render partial: 'shared/terms_of_service'