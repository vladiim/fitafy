%section#home_usp.hero-unit
  %p#usp_copy
    = @snapz.usp

  = link_to "TOOL TIP", "#", class: "btn", "rel" => "popover", "data-placement" => "top", "data-content" => "THIS IS THE FUCKING CONTENT", "data-original-title" => "FUCKING TITLE"

  %table#homepage_cta
    %tr
      %td

        #find_workouts= link_to "FIND WORKOUTS", workouts_path, class: "btn btn-primary"
      %td
        #create_workouts= link_to_create_workout_button

- unless @workouts.empty?
  %aside
    %header#trending
      %h5 TRENDING WORKOUTS
  
      %ul#trending_workouts.row
      - @workouts.each do |workout|
        - @renderer.set_workout workout
        = @renderer.render.html_safe