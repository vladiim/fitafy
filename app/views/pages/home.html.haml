%section#home_usp.hero-unit
  %p#usp_copy
    = @snapz.usp

  %table#homepage_cta
    %tr
      %td

        #find_workouts= link_to "FIND WORKOUTS", workouts_path, class: "btn btn-primary"
      %td
        #create_workouts= link_to_create_workout_button

- unless @workouts.empty?
  %aside
    %header#trending
      %h5 TRENDING WORKOUTS
  
      %ul#trending_workouts.row
      - @workouts.each do |workout|
        - @renderer.workout = workout
        = @renderer.render.html_safe

/ %h1= current_user.features
/ %h1= current_user.wants_to_see('clients')
/ %h1= current_user.staff?
/ %h1= $rollout.active? :clients, current_user

- if current_user && $rollout.active?(:clients, current_user)
  %h1 BOOM THIS IS THE AMAZING NEW CLIENT FEATURE YO!