      <table class='workout_exercise_details'>
        <thead>
          <tr>
            <th>
              <h5>Sets</h5>
            </th>
            <th>
              <h5>Muscle-group</h5>
            </th>
            <th>
              <h5>Equipment</h5>
            </th>
          </tr>
        </thead>
  
        <tbody>
          <tr>
            <td>
              {{sets}}
            </td>
            <td>{{first_muscle}}</td>
            <td>{{equipment_name}}</td>
          </tr>
        </tbody>
      </table>
  
