<li class='workout_exercise big_box_list row well {{order}}' data-workout-exercise='{{id}}'>

  <aside class='span1 w_e_order {{id}}'>

    {{# own_workout}}
      <a href="{{url}}" class='change_workout_exercise_order' data-order='{{order}}' data-move='up' data-workout-exercise='{{id}}'>{{{up_link}}}</a>
      <p class='order_number'>{{order}}</p>
      <a href="{{url}}" class='change_workout_exercise_order' data-order='{{order}}' data-move='down' data-workout-exercise='{{id}}'>{{{down_link}}}</a>
    {{/ own_workout}}

    {{^ own_workout}}
      <p class='order_number'>{{order}}</p>
    {{/ own_workout}}

  </aside>


  <article class='we_details'>
    <h3 class='span5'>
      <a href="{{exercise_url}}" data-toggle='modal' data-target='#exercise_ajax_modal'>{{name}}</a>
    </h3>

    <div class='set_details span3'>
      <table class='workout_exercise_set_details'>
        <tbody data-workout-exercise='{{id}}'>

          {{{javascript_set_details}}}

          {{#set_details}}
            {{> workout_exercises/set_detail}}
          {{/set_details}}

        </tbody>
      </table>

      {{# own_workout}}
        <a href="{{set_details_url}}" class='new_workout_exercise_set_details btn btn-primary btn-mini'>+ ADD SET</a>
      {{/ own_workout}}
    </div>

    <div class='span2 workout_form_group instructions'>
      <div>{{muscle}} with {{equipment_name}}</div>

      <br />

      <p>{{instructions}}</p>

      {{# own_workout}}
        <a href="{{url}}" class='show_workout_exercise_form' data-tag='instructions' data-value="{{id}}">Edit</a>
        <div class='hidden workout_exercise_form instructions'>
          <input class='string' type='text' data-tag='instructions' data-value="{{id}}">
          <button class='update_workout_exercise_form instructions btn btn-primary btn-mini' data-value="{{id}}">
            UPDATE
          </button>

          <a href="{{url}}" class='hide_workout_exercise_form' data-tag='instructions' data-value="{{id}}">Cancel</a>
        </div>

        <br />
        <br />

        <a href="{{url}}" class='delete_workout_exercise btn btn-danger btn-mini'>DELETE</a>
      {{/ own_workout}}

    </div>
  </article>
</li>